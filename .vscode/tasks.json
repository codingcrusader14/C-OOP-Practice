{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang++", // Use clang++ for C++
      "args": [
        "-std=c++20", // Enable C++20 (or change to c++23 if needed)
        "-stdlib=libc++", // Use the correct C++ standard library
        "-fcolor-diagnostics", // Enable color diagnostics
        "-fansi-escape-codes", // Enable ANSI escape codes for better terminal output
        "-g", // Enable debugging information
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
